@{
}

<h1>Select Database @ViewBag.SelectedDb</h1>

<div>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsAuthenticated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsAuthenticated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Database)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Database)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Token)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Token)
        </dd>

    </dl>
    <div class="form-group">
        @Html.ActionLink("Get Weather Data", "GetWeatherData", "Login", new { token = Model.Token }, null)<br />
        @Html.ActionLink("Get Test Data", "GetTestData", "Login", new { token = Model.Token }, null)<br />
        @Html.ActionLink("Get Token in API", "GetToken", "Login", new { token = Model.Token }, null)<br />
        @*<input type="submit" value="Get Weather Data" asp-action="GetWeatherData" class="btn btn-primary" />*@
    </div>
</div>